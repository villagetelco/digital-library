
config wifi-device 'radio0'
	option type 'mac80211'
	option phy 'phy0'
	option txpower '17'
	option hwmode '11g'
	option disabled '0'
	option channel '11'
	option htmode 'HT20'

config wifi-iface 'ap_0'
	option device 'radio0'
	option ifname 'wlan0'
	option network 'lan'
	option mode 'ap'
	option hidden '0'
	option isolate '0'
	option maxassoc '30'
	option disabled '0'
	option key 'password'
	option ssid 'Digital-Library'
	option encryption 'psk'

config wifi-iface 'ap_1'
	option device 'radio0'
	option ifname 'wlan0-3'
	option mode 'ap'
	option network 'guest'
	option isolate '1'
	option disabled '0'
	option ssid 'Digital-Library-Guest'
	option encryption 'psk'
	option maxassoc '10'
	option key 'passwordguest'

config wifi-iface 'sta_0'
	option device 'radio0'
	option ifname 'wlan0-2'
	option mode 'sta'
	option network 'wwan'
	option encryption 'psk2'
	option ssid 'Host-SSID'
	option key 'Host-Passphrase'
	option disabled '1'


